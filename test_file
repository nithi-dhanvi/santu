pipeline {
    agent any
    stages {
        stage ("Git Checkout") {
            steps {
                git branch: "main", url: "https://github.com/nithi-dhanvi/santu.git"
                }
            }
            stage ("Maven Build") {
                  steps {
                      sh "/opt/apache-maven-3.6.3/bin/mvn clean package -DskipTests=true"
                  }
             }

            stage ("UploadToNexus") {
                  steps {
                     script {
                        UploadtoNexus()
                }
            }
            
        }

        
    }
}
def UploadtoNexus() {
     nexusArtifactUploader artifacts: [[artifactId: 'myweb', classifier: '', file: 'target/myweb-1.0.0-SNAPSHOT.war', type: 'war']], credentialsId: 'Nexus', groupId: 'in.javahome', nexusUrl: '192.168.0.22:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'mvn-project', version: '1.0.0-SNAPSHOT'
}
